{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block body %}
<div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" src="https://t3.ftcdn.net/jpg/03/46/83/96/360_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg" width="90">
                <span class="font-weight-bold">{{ app.user.firstName }} - {{ app.user.lastName }}</span>
                <span class="text-black-50">{{ app.user.email }}</span><span>France</span></div>
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                            <h6><a href="{{path('app_home')}}">Back to home</a></h6>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><input type="text" class="form-control" placeholder="first name" value="{{app.user.firstName }}"></div>
                        <div class="col-md-6"><input type="text" class="form-control" value= "{{ app.user.lastName }}" placeholder="Doe"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" placeholder="Email" value="{{ app.user.email}}"></div>
                        <div class="col-md-6"><input type="text" class="form-control" value="{{ app.user.phoneNumber}}" placeholder="Phone number"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" placeholder="address" value="{{ app.user.address}}"></div>
                        <div class="col-md-6"><input type="text" class="form-control" value="{{ app.user.country}}" placeholder="Country"></div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-3 mt-5">
                        <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-right mr-1 mb-1"></i>
                            <h6><a href="">Edit profile</a></h6>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
