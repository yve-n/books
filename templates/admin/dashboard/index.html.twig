{% extends 'base_admin.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}

	<div class="container mx-auto">
		<div class="d-flex flex-row flex-wrap align-content-around justify-content-between">
				{% for book in books_group %}
					<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="margin-bottom:10px !important;">
						<div class="card h-80" style="width:300px;">
						<div class="badge text-white position-absolute" style="top: 0.1rem; right: 0.5rem">
									{{book.category.name}}
							</div>
							{% if book.image ?? null %}
								<img class="card-img-top" src="{{book.image}}" alt="image du produit {{book.title}}"/>
							{% else %}
								<img class="card-img-top" src="https://via.placeholder.com/640x480.png/0099ee?text=reprehenderit" alt="image du produit {{book.title}}"/>
							{% endif %}
							<div class="card-body">
								<h5 class="card-title">{{book.title}}</h5>
								<h6 class="card-text text-center">{{book.author}}</h6>
								<p class="card-text">{{book.description}}</p>
							</div>
						</div>
					</div>
			{% endfor %}

		</div>
	</div>


{% endblock %}
